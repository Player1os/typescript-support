{
  "name": "@player1os/typescript-support",
  "version": "1.3.0",
  "description": "A set of common utilities and scripts to be used in the development of projects written in Typescript",
  "main": "lib/index.js",
  "types": "@types/index.d.ts",
  "scripts": {
    "preversion": "support-require @player1os/javascript-support/lib/task/preversion",
    "postversion": "support-require @player1os/javascript-support/lib/task/postversion",
    "update-base-create": "support-require @player1os/javascript-support/lib/task/update_base/create",
    "update-base-load": "support-require @player1os/javascript-support/lib/task/update_base/load",
    "test": "eslint . && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/typescript-support.git"
  },
  "keywords": [
    "typescript",
    "tslint",
    "tsconfig",
    "jest",
    "configuration",
    "bluebird",
    "compiler",
    "postprocess",
    "module",
    "path",
    "rewrite",
    "newline",
    "character",
    "normalize"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Player1os/typescript-support/issues"
  },
  "homepage": "https://github.com/Player1os/typescript-support/#readme",
  "engines": {
    "node": "^10.6.0",
    "npm": "^6.1.0"
  },
  "dependencies": {
    "@types/bluebird-global": "^3.5.5",
    "@types/jest": "^23.1.4",
    "chokidar": "^2.0.4",
    "escape-string-regexp": "^1.0.5",
    "find-root": "^1.1.0",
    "recursive-readdir-sync": "^1.0.6"
  },
  "devDependencies": {
    "@player1os/javascript-support": "^1.3.10",
    "fs-extra": "^6.0.1",
    "jest": "^23.5.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^\\.\\.\\.(.*)": "<rootDir>$1"
    },
    "testEnvironment": "node"
  }
}
